<!DOCTYPE html>
<html lang="en">


<%- include('../../../partials/admin/head'); %>


  <body onload="startTime()">

    <%- include('../../../partials/admin/sidenav'); %>
    <%- include('../../../partials/admin/header',{name:name}); %>
  
    <div class="content">
      <h1 style="font-family: 'Poppins';" class="text-center">BUKTI PEMBAYARAN</h1>    <h5 style="font-family: 'Poppins';" class="text-center text-muted">Menampilkan Bukti pembayaran yang diinput dari Website</h5>
      <div class="container">
    
        <div class="row">
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col" class="table-header text-center">Order ID</th>
                <th scope="col" class="table-header text-center">Nama Pembeli</th>
                <th scope="col" class="table-header text-center">Bukti Transaksi</th>
                <th scope="col" class="table-header text-center">Status Transaksi</th>
                <th scope="col" class="table-header text-center"></th>
                <th scope="col" class="table-header text-center"></th>
              </tr>
            </thead>
            <tbody>
              <% transactions.forEach(transaction =>{ %>
  
                <tr>
                  <th scope="row" class="text-center"><%= transaction.orderid %></th>
                  <td class="table-data text-center">Rp.<%= order.total %></td>
                  <td class="text-center"><%=  order.createdAt.toLocaleString("id-ID", options) %>, Pukul <%=  order.createdAt.toLocaleTimeString("id-ID")%></td>
                  <td class="table-data  text-center text-danger font-weight-bold"><%=  order.status %></td>
                  <td class="table-data text-center"><form action="/dashboard/transaction/<%= order._id %>/update-success?_method=PUT" method="POST"><button type="submit" class="btn btn-success">Success</button></form></td>
                </tr>
                <% }) %>
             
            </tbody>
          </table>
      
          </div>
  
        </div>
  
      </div>
      </div>  

      <%- include('../../../partials/admin/footer'); %>
  </body>

       
</html>