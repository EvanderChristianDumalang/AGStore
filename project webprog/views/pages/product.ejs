<!DOCTYPE html>
<html lang="en">


  <%- include('../partials/head', {title : 'Produk AGStore'}); %>
  <% if (isLoggedIn) { %>
      <%- include('../partials/header', {isLoggedIn : isLoggedIn,
          name: name}); %>
      <% } else { %>
          <%- include('../partials/header', {isLoggedIn : isLoggedIn}); %>
      <% } %>

    <body>
        <section class="content" style="margin-top: 75px;">
        
            <div class="container">
                <div class="row ">
                  <div class="col mb-4 col-breadcrumb">
                    <nav aria-label="breadcrumb">
                      <ol class="breadcrumb bg-transparent">
                        <li class="breadcrumb-item"><a href="landing.html">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Product</li>
                      </ol>
                    </nav>
                  </div>
                </div>
              </div>
            
          <div class="container">
         
            <div class="row">
              <div class="col">
                <div class="sortBy">
                  <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <button class="btn btn-utama" type="button" id="btnTest">Search</button>
                    </div>
                    <input type="text" id="search" class="form-control" placeholder="" aria-label=""
                      aria-describedby="basic-addon1">
                  </div>
      
                  <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <label class="input-group-text" for="categorySort">Categories</label>
                    </div>
                    <select class="custom-select" id="categorySort" aria-placeholder="choose..">
                      <option value="" disabled selected>Select your option</option>
                      <option value="Mouse">Mouse</option>
                      <option value="Headset">Headset</option>
                      <option value="Keyboard">Keyboard</option>
                      <option value="misc">Miscellaneous</option>
                    </select>
                  </div>
                  <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <label class="input-group-text" for="brandSort">Brand</label>
                    </div>
                    <select class="custom-select" id="brandSort">
                      <option value="" disabled selected>Select your option</option>
                      <option value="Logitech">Logitech</option>
                      <option value="SteelSeries">SteelSeries</option>
                      <option value="Razer">Razer</option>
                      <option value="HyperX">HyperX</option>
                    </select>
                  </div>
                  <div class="dropdown">
      
                    <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
                      aria-haspopup="true" aria-expanded="false">
                      Filter
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                      <a class="dropdown-item" href="#">Harga Tertinggi</a>
                      <a class="dropdown-item" href="#">Harga Terendah</a>
                      <a class="dropdown-item" href="#">Terbaru</a>
                    </div>
                  </div>
                </div>
      
      
              </div>
            </div>
            <div id="update">
             <div class="row mt-2">
                <% productdata.products.forEach(function(item){ %>
                <div class="col-md-3-sm-6 ml-3 mt-3">
                <div class="card card-item" style="width: 14rem;">
                <img class="card-img-top card-img" src="images/<%= item.imgname %>.jpg" />
                <div class="card-body">
                <h5 class="card-title text-center"><%= item.nama %></h5>
                <p class="card-text text-center"><b>Rp <%= item.harga %></b></p>
                </div>
                <div class="card-footer">
                <a href="/<%= item.url %>" class="btn btn-primary d-flex justify-content-center mt-3">Beli Sekarang</a>
                </div>
                </div>
                </div>
                   <% }) %>
                </div>
                 
               
                
            </div>
      
      
      
      
      
            <div class="container mt-5" <div class="row ">
              <div class="col justify-content-center">
                <div class="d-flex justify-content-center">
                  <nav aria-label="...">
                    <ul class="pagination">
                      <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                      </li>
                      <li class="page-item active"><a class="page-link" href="#">1</a></li>
                      <li class="page-item " aria-current="page">
                        <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                      </li>
                      <li class="page-item"><a class="page-link" href="#">3</a></li>
                      <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                      </li>
                    </ul>
                  </nav>
                </div>
              </div>
            </div>
          </div>
          </div>
        </section>
      
    
      
        <script>
          $('#search').keyup(function () {
            var searchField = $('#search').val();
            var myExp = new RegExp(searchField, "i");
      
      
            $.getJSON('data.json', function (data) {
              var output = '<div class="row mt-2">';
      
              $.each(data, function (key, val) {
                if ((val.nama.search(myExp) != -1)) {
                  output += '<div class="col-md-3-sm-6 ml-3 mt-3">';
                  output += '<div class="card card-item" style="width: 14rem;">'
                  output += '<img class="card-img-top card-img" src="images/' + val.imgname +
                    '.jpg" alt="' + val.imgname +
                    '"" />';
                  output += '<div class="card-body">'
                  output += '<h5 class="card-title text-center">' + val.nama + '</h5>';
                  output += '<p class="card-text text-center"><b>Rp' + val.harga.toLocaleString() + '</b></p>';
                  output += '</div>'
                  output += '<div class="card-footer">'
                  output += '<a href="' + val.url +
                    '" class="btn btn-primary d-flex justify-content-center mt-3">Beli Sekarang</a>'
                  output += ' </div>'
                  output += ' </div>'
                  output += ' </div>'
                }
              });
      
              output += '</div>';
              $('#update').html(output);
            });
      
          });
        </script>
      

      <script>
      
      </script>

        <script>
          $("#categorySort").change(function () {
      
           var cat = $(this).val();
      
            var myExp = new RegExp(cat, "i");
      
            $.getJSON('data.json', function (data) {
              var output = '<div class="row mt-2">';
      
              $.each(data, function (key, val) {
                if ((val.category.search(myExp) != -1)) {
                  output += '<div class="col-md-3-sm-6 ml-3 mt-3">';
                  output += '<div class="card card-item" style="width: 14rem;">'
                  output += '<img class="card-img-top card-img" src="images/' + val.imgname +
                    '.jpg" alt="' + val.imgname +
                    '"" />';
                  output += '<div class="card-body">'
                  output += '<h5 class="card-title text-center">' + val.nama + '</h5>';
                  output += '<p class="card-text text-center"><b>Rp' + val.harga.toLocaleString() + '</b></p>';
                  output += '</div>'
                  output += '<div class="card-footer">'
                  output += '<a href="' + val.url +
                    '" class="btn btn-primary d-flex justify-content-center mt-3">Beli Sekarang</a>'
                  output += ' </div>'
                  output += ' </div>'
                  output += ' </div>'
                }
              });
      
              output += '</div>';
              $('#update').html(output);
            });
      
          });
        </script>
      </body>

  <%- include('../partials/footer',{isLoggedIn : isLoggedIn}); %>


</html>